initarc(){
  ARCANE_TYPE_BUILD=${1}
  ARCANE_SOURCE_DIR=~/Documents/arcane/framework
  ARCANE_BUILD_DIR=~/build_install/build_arcane/${ARCANE_TYPE_BUILD}
  ARCANE_INSTALL_PATH=~/build_install/install_arcane/${ARCANE_TYPE_BUILD}

  mkdir -p ${ARCANE_BUILD_DIR}
  mkdir -p ${ARCANE_INSTALL_PATH}

  cd ${ARCANE_BUILD_DIR}
}

configarc(){
  cmake \
  -S ${ARCANE_SOURCE_DIR} \
  -B ${ARCANE_BUILD_DIR} \
  -GNinja \
  -DCMAKE_INSTALL_PREFIX=${ARCANE_INSTALL_PATH} \
  -DARCANE_BUILD_TYPE=${ARCANE_TYPE_BUILD} \
  -DCMAKE_BUILD_TYPE=${ARCANE_TYPE_BUILD}
}

biarc(){
  cmake --build ${ARCANE_BUILD_DIR} --target install
}

docarc(){
  cmake --build ${ARCANE_BUILD_DIR} --target ${1}doc
}


