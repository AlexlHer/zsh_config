initqs(){
  ARCANE_TYPE_BUILD=${1}
  ARCANE_INSTALL_PATH=~/build_install/install_arcane/${ARCANE_TYPE_BUILD}

  QS_BUILD_TYPE=${ARCANE_TYPE_BUILD}
  QS_PROJECT_DIR=~/Documents/arcane/arcane-benchs/quicksilver
  QS_SOURCE_DIR=${QS_PROJECT_DIR}
  QS_BUILD_DIR=~/build_install/build_qs/${QS_BUILD_TYPE}
  QS_EXE=${QS_BUILD_DIR}/src/Quicksilver
  QS_ARC=${QS_PROJECT_DIR}/data/tests/ExampleFull.arc
  mkdir -p ${QS_BUILD_DIR}

  cd ${QS_BUILD_DIR}
}

configqs(){
  cmake \
  -S ${QS_SOURCE_DIR} \
  -B ${QS_BUILD_DIR} \
  -GNinja \
  -DCMAKE_PREFIX_PATH=${ARCANE_INSTALL_PATH} \
  -DCMAKE_BUILD_TYPE=${QS_BUILD_TYPE}
}
